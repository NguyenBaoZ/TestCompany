<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_employe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/cardview_item2"
        android:layout_width="375dp"
        android:layout_height="42dp"
        android:layout_below="@id/cardview_item1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"

        android:elevation="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:id="@+id/taskName_textview"
                android:layout_width="207dp"
                android:layout_height="19dp"
                android:layout_marginStart="15dp"
                android:text="Company Management"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                >
            </TextView>

            <TextView
                android:id="@+id/taskTime_textview"
                android:layout_width="137dp"
                android:layout_height="19dp"
                app:layout_constraintStart_toEndOf="@+id/taskName_textview"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="22dp"
                android:text="14/4/2021 5:00pm"
                android:textSize="10dp"
                android:textAlignment="textEnd"
                android:textColor="#AEAEAE"
                android:textStyle="bold"></TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>